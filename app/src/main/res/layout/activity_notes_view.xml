<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_notes_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.ucsb.cs.cs185.jjkaddoura.unitytoolbar.NotesView">

    <Button
        android:id="@+id/viewBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="BACK"
        />

    <Button
        android:id="@+id/viewEditButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Edit"
        />

    <Button
        android:id="@+id/viewRemoveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Remove"
        />

    <TextView
        android:id="@+id/viewTitle"
        android:layout_below="@id/viewBackButton"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:textSize="40sp"
        android:hint="title"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/viewContent"
        android:layout_below="@id/viewTitle"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:hint="content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>